[user]
	name = {{ extracted_name }}
	email = {{ email }}
[init]
	defaultBranch = main
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[diff]
	submodule = log
[alias]
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --merge
	sync = "!sh -c 'current_br=$(git branch | grep \\* | cut -d \" \" -f 2) && \
									remote_rep=$(git remote -v | grep amdaris@vs-ssh.visualstudio.com | head -n 1 | cut -f1) && \
									git checkout main && git pull $remote_rep main && \
									git checkout develop && git pull $remote_rep develop && \
									git checkout $current_br'"
[submodule]
	recurse = true
[status]
	submodulesummary = 1
